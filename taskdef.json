{
  "executionRoleArn": "arn:aws:iam::709358053306:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "docker-test",
      "image": "<IMAGE1_NAME>",
      "environment": [
        {
          "name": "APP_DATABASE_HOST",
          "value": "docker-test.c5xfubdjquij.ap-northeast-1.rds.amazonaws.com"
        },
        {
          "name": "APP_DATABASE_PASSWORD",
          "value": "testtest"
        },
        {
          "name": "APP_DATABASE_USER",
          "value": "docker_test"
        },
        {
          "name": "RAILS_ENV",
          "value": "production"
        },
        {
          "name": "RAILS_LOG_TO_STDOUT",
          "value": "ON"
        },
        {
          "name": "RAILS_MASTER_KEY",
          "value": "910ba316a6467ce69af7110f966e610d"
        },
        {
          "name": "RAILS_SERVE_STATIC_FILES",
          "value": "true"
        }
      ],
      "command": ["/bin/sh", "-c", "rm -f /docker_test/tmp/pids/server.pid && rails s -p 3000 -b 0.0.0.0 && rails assets:precompile"],
      "entrypoint:": ["-e", "ENV_INJECTOR_PREFIX=container.prod"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "secretOptions": null,
        "options": {
          "awslogs-group": "develop",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "docker-test"
        }
      },
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true
    },
    {
      "name": "spring",
      "image": "<IMAGE1_NAME>",
      "command": [
        "spring",
        "server"
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "secretOptions": null,
        "options": {
          "awslogs-group": "develop",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "spring"
        }
      },
      "environment": [
        {
          "name": "APP_DATABASE_HOST",
          "value": "docker-test.c5xfubdjquij.ap-northeast-1.rds.amazonaws.com"
        },
        {
          "name": "APP_DATABASE_NAME",
          "value": "docker_test"
        },
        {
          "name": "APP_DATABASE_PASSWORD",
          "value": "testtest"
        },
        {
          "name": "APP_DATABASE_USER",
          "value": "docker_test"
        },
        {
          "name": "SPRING_SOCKET",
          "value": "/tmp/spring/spring.sock"
        }
      ],
      "essential": true
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "family": "docker-test"
}