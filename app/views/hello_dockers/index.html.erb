
<div class="container">
<table class="table table-striped table-bordered">
  <% @messages.each do |message|%>
    <tr>
      <td><label class="pull-left"><%= message.display_message %></label></td>
      <td><%= button_to '削除', index_destroy_hello_dockers_path( message.id), method: :delete, class: "btn btn-info"%></td>
    </tr>
  <% end %>

</table>


<hr>

<%= form_with(url: index_add_hello_dockers_path) do |form| %>

    <div class="row">
      <div class="col-8">
  <%= form.text_field :display_message %>
      </div>
        <div class="col-2">
  <%= form.submit "追加", class: "btn btn-info"%>
        </div>
    </div>

<% end %>

</div>
